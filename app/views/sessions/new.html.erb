<br><br><br>
<center>
  <div style="border:0 solid; border-radius:25px; border-color: #000000; width:450px;  opacity: 1; color:#1E90FF;">

  
    <div style="width:200px; margin-top:130px;">
      <%= form_for :session, url: sessions_path do |f| %>
      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.text_field :email, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <%= f.submit "Sign in", class: 'btn btn-primary' %>
      <% end %>
      <br>
      <p>New User? &ndash; <%= link_to 'Sign up', new_user_path %></p>
  </div>
</div>
</center>